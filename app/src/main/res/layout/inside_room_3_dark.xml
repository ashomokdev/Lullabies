<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/image_areas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/image_background_dark"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/image_layer_pressed"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.20"
        android:scaleType="centerCrop" />

    <ImageButton
        android:id="@+id/beanbag_btn"
        style="@style/room_3_beanbag_btn"
        android:src="@drawable/background3_beanbag_dark_btn"/>

    <ImageButton
        android:id="@+id/pyramid_btn"
        style="@style/room_3_pyramid_btn"
        android:src="@drawable/background2_pyramid_dark_btn"/>

    <include layout="@layout/light_switch_off" />

</RelativeLayout>