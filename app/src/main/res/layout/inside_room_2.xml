<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/my_frame"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <ImageView
        android:id="@+id/image_background"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:scaleType="centerCrop"
        />

    <ImageView style="@style/room_2_ball_btn" />

    <ImageView style="@style/room_2_bear_btn" />

    <ImageView style="@style/room_2_bricks_btn" />

    <ImageView style="@style/room_2_pyramid_btn" />

    <ImageView style="@style/room_2_car_btn" />

    <include
        layout="@layout/light_switch_on"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp" />

</RelativeLayout>