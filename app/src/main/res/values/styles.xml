<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="ButtonPink" parent="StartButton">
        <item name="android:background">@drawable/pink_button</item>
    </style>

    <style name="ButtonBlue" parent="StartButton">
        <item name="android:background">@drawable/blue_button</item>
    </style>

    <style name="StartButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">3dp</item>
        <item name="android:minWidth">184dp</item>
        <item name="android:minHeight">64dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingRight">25dp</item>
        <item name="android:paddingLeft">25dp</item>
    </style>

    <style name="Widget.Button.Toggle" parent="android:Widget">
        <item name="android:background">@drawable/toggle_fab</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:disabledAlpha">?android:attr/disabledAlpha</item>
    </style>

</resources>
